            height: 100%;
        }

        .videoContainer {
            background-color: #1f1e1e;
            /* overflow: hidden;
            display: block; */
            width: 400px;
            height: 300px;
        }

        .videoStream {
            margin: auto auto;
            display: block;
            min-width: 0%;
            min-height: 0%;
            max-width: 100%;
            max-height: 100%;
        }
    </style>
</head>

<body>
    <div id="toolBar">
        <form>
            <label><input id="microphone" type="checkbox" value="yes">Sound</label>
            <label><input id="camera" type="checkbox" value="yes">Video</label>
        </form>
    </div>
    <div id="mainLayout">

    </div>
